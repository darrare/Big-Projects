<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmashRandomPicker"
             x:Class="SmashRandomPicker.MainPage"
             BackgroundColor="Black">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0, 20, 0, 0" />
    </ContentPage.Padding>

    <StackLayout>
        <ScrollView SizeChanged="OnContainerSizeChanged">
            <StackLayout x:Name="stackLayout">
                <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="Black" Padding="0,0,0,0" Margin="0,0,0,0" />
            </StackLayout>
        </ScrollView>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Pick" Clicked="PickButtonClicked"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
